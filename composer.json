{
    "name": "morvy/cloudflare-r2-for-woocommerce",
    "description": "Simple WooCommerce integration to offload downloadable product files to Cloudflare R2",
    "type": "wordpress-plugin",
    "license": "AGPL-3.0-or-later",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Peter Morvay",
            "email": "moped@jepan.sk"
        }
    ],
    "require": {
        "php": ">=8.2",
        "aws/aws-sdk-php": "^3.359"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0|^12.0",
        "wp-coding-standards/wpcs": "^3.2",
        "squizlabs/php_codesniffer": "^3.13",
        "rector/rector": "^1.2",
        "wp-cli/i18n-command": "^2.6",
        "wp-cli/wp-cli-bundle": "^2.11",
        "matthiasmullie/minify": "^1.3",
        "phpstan/phpstan": "^1.12",
        "php-stubs/wordpress-stubs": "^6.8",
        "php-stubs/woocommerce-stubs": "^10.3",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "fsylum/rector-wordpress": "^0.5.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "test": "phpunit --no-coverage",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "rector": "rector process includes/ --dry-run",
        "rector-fix": "rector process includes/",
        "make-pot": "vendor/bin/wp i18n make-pot . languages/cfr2wc.pot --exclude=vendor,node_modules,tests,build,.github --domain=cfr2wc --headers='{\"Report-Msgid-Bugs-To\":null,\"Plural-Forms\": \"nplurals=INTEGER; plural=EXPRESSION;\",\"Last-Translator\": \"Peter Morvay <moped@jepan.sk>\\n\",\"Language-Team\": \"Peter Morvay <moped@jepan.sk>\\n\"}'",
        "build": "php build-assets.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
